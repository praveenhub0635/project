pipeline {
    agent any
    stages {
        stage('configuring docker'){
            steps{
                sh 'curl -fsSL get.docker.com -o get-docker.sh'
            }
        }
        stage('Build Docker image') {
            steps {
                echo "Praveen@4935"
                sh 'docker login -u praveen0635 --password-stdin'
                sh 'docker build -t praveen0635/ecomm .'
            }
        }
        stage('list docker images'){
            steps{
                sh 'docker image ls'
            }
        }
    }
}