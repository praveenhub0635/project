pipeline {
    agent node{
        stage('SCM Checkout'){
            git 'https://github.com/praveenhub0635/project.git'
        }
    }
    stages {
        stage('configuring docker'){
            steps{
                sh 'curl -fsSL get.docker.com -o get-docker.sh'
            }
        }
        stage('pull docker image'){
            steps{
                sh 'usermod -aG docker jenkins'
                sh 'chown root:docker /var/run/docker.sock'
                sh 'docker pull hello-world'
            }
        }
        stage('Build Docker image') {
            steps {
                sh 'docker run -dit --name my-apache-app -p 8080:80 -v "$PWD":/usr/local/apache2/htdocs/ httpd:2.4'
            }
        }
        stage('list docker images'){
            steps{
                sh 'docker image ls'
            }
        }
    }
}