pipeline {
    agent any
    stages{
        stage('Building Docker image'){
            agent{
                Dockerfile true
            }
            steps{
             echo "buid image from docker hub"
             sh 'docker build -t praveen0635/ecomm'

           }
        }
        stage('Test image'){
            steps{
            sh 'docker run -dt --name ecomm -p 80:80  praveen0635/ecomm'
            }
        }

    }
}